# Copy this file to .env and fill in your values

# Neon Database URL
NEON_DATABASE_URL=postgresql://<username>:<password>@<host>/<database>?sslmode=require

# Admin credentials
ADMIN_USER=admin
ADMIN_PASS=your_admin_password

# JWT secret for admin tokens (generate a random string)
ADMIN_JWT_SECRET=your_jwt_secret_here

# Namecheap Email SMTP Configuration
SMTP_HOST=mail.privateemail.com
SMTP_PORT=587
SMTP_USER=info@mtkenyanews.com
SMTP_PASS=your_email_password
SMTP_FROM=info@mtkenyanews.com

# Server port (Railway will set this automatically)
PORT=4000
