{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/s/:code",
      "destination": "/api?shortlink=:code"
    },
    {
      "source": "/p/:code",
      "destination": "/api?polllink=:code"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
